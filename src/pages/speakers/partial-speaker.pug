mixin speaker(name, desc, pic, topic, profile, link)
    .mdl-card.mdl-shadow--2dp
        div(style="width: 100%; height: 196px; background: #212121")
        div(style="margin: auto; margin-top: -96px; text-align: center")
            img(src=pic style="height: 172px; width: 172px; border-radius: 50%; border: 4px solid #ffffff")
            br
            span(style="font-size: 28px; font-family: Roboto; line-height: 40px; color: #212121; opacity: 0.87; font-weight: 800")= name
            br
            span(style="font-size: 16px; font-family: Roboto; line-height: 18px; color: #212121; opacity: 0.55; font-weight: 500")= desc
            br
            br
            br
            span(style="font-size: 18px; font-family: Roboto; line-height: 24px; color: #212121; opacity: 0.87; font-weight: 500") Talking About
            br
            span(style="font-size: 16px; font-family: Roboto; line-height: 18px; color: #212121; opacity: 0.55; font-weight: 500")= topic
            br
            br
            br
            if link
                a(onclick='return page_nav("abstract_udgata")')
                    i.material-icons(style="font-size: 32px;") account_circle
            else 
                a(href=profile target="_blank")
                    i.material-icons(style="font-size: 32px;") account_circle